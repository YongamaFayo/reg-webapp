<body>
  <div class="container">

    <div class="row">
      <form action="/reg_numbers" method="POST">
        <div>
          <div class="header">
            <h1>THE REGISTRATION FORM</h1>
            
          </div>

          <div class="example">

          </div>
          <div class="main">
            <input name="regInput" class="regString" placeholder="enter a registration number">
            <button class="">Add reg number</button>
          <div><h10>e.g CA 123, CJ 456, CY 789</h10></div>
            <div class="error">

              {{messages.error}}

            </div>
            <div class="success">
              {{messages.success}}

            </div>

          </div>

      </form>

      <form action="/reg_number" method="post">

        <div class="filter">
          <strong>Filter by town</strong>

          <input type="radio" name="town" value="all">Show all
          <input type="radio" name="town" value="CK">Paarl
          <input type="radio" name="town" value="CJ">Malmesbury
          <input type="radio" name="town" value="CA"> Cape Town

        </div>
    </div>

    <div class="row">
      <div class="col-4"></div>
      <div class="col-2">

        <div class="center">

          <button class="filterBtn" type="submit">Filter</button>
        </div>
        </form>

      </div>

      <div class="col-2">

        <form action="/reset" method="GET">

          <div class="clear">
            <button class="submit" name="clearBtn">Reset </button>
          </div>
        </form>
      </div>

      <div class="col-4"></div>

    </div>
    <div class="list">
      <ul>

        {{#each plateNum}}
        <li>{{this.reg}}</li>
        {{/each}}
      </ul>
    </div>





