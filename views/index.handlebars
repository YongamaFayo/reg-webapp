<body>
  <div class="container">

    <div class="row">
      <form action="/reg_numbers" method="POST">

        <div class="header">
          <h1>THE REGISTRATION FORM</h1>
        </div>
        <br>
        <br>
        <br>
        <div class="example">

        </div>
        <div class="main">
          <input name="regInput" class="regString" placeholder="enter a registration number">
          <button class="">Add reg number</button>

          <br>


          <br>
          <br>

          <div class="message">

            {{messages.error}}

          </div>
        </div>
        
        

      </form>

      <div class="filter">
        <strong>Filter by town</strong>

        <input type="radio" name="town" value="">Show all
        <input type="radio" name="town" value="CY">Bellville
        <input type="radio" name="town" value="CJ">Malmesbury
        <input type="radio" name="town" value="CA"> Cape Town


      </div>

      <div>
        {{#each regDisplay}}
        <li>{{this.reg}}</li>
        {{/each}}
      </div>

      <div class="success">

      </div>

      <form action="/reset" method="GET">

        <div class="clear">
          <button class="submit" name="clearBtn">Reset </button>
        </div>
      </form>
      {{!-- <div class="error">
          
      </div> --}}
      {{!-- <div class="reg">
                {{reg}}
            </div> --}}


      <script>
        setTimeout(function () {
          document.querySelector(".error").innerHTML = ""
        }, 2000)
        setTimeout(function () {
          document.querySelector(".success").innerHTML = ""
        }, 1000)
      </script>



</body>